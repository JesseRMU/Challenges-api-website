<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Netflix Roulette</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="bg-gray-900 min-h-screen">
    <div class="container mx-auto px-4 py-8">
      <!-- Header Section -->
      <div class="text-center mb-8">
        <div class="bg-gray-700 text-white py-4 px-6 rounded-t-lg">
          <h1 class="text-xl font-medium">Don't know what to watch?</h1>
        </div>
        <div class="bg-gray-300 text-black py-3 px-6 rounded-b-lg">
          <h2 class="text-lg font-semibold">Try Netflix Roulette!</h2>
        </div>
      </div>

      <!-- Main Content Container -->
      <div class="max-w-md mx-auto">
        <!-- Form Container -->
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
          <form id="filterForm" class="space-y-6">
            <!-- Genre Section -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3 uppercase tracking-wider">
                GENRE
              </label>
              <select 
                id="genreSelect" 
                name="genre" 
                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
              >
                <option value="">All</option>
                <% genres.forEach(genre => { %>
                <option value="<%= genre.id %>"><%= genre.name %></option>
                <% }) %>
              </select>
            </div>

            <!-- Type Section -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3 uppercase tracking-wider">
                TYPE
              </label>
              <div class="flex space-x-4">
                <label class="flex items-center text-gray-300">
                  <input 
                    type="checkbox" 
                    id="filterMovie" 
                    checked 
                    class="h-4 w-4 text-blue-500 focus:ring-blue-500 border-gray-600 rounded bg-gray-700 mr-2"
                  />
                  Movie
                </label>
                <label class="flex items-center text-gray-300">
                  <input 
                    type="checkbox" 
                    id="filterTV" 
                    checked 
                    class="h-4 w-4 text-blue-500 focus:ring-blue-500 border-gray-600 rounded bg-gray-700 mr-2"
                  />
                  TV Show
                </label>
              </div>
            </div>

            <!-- IMDB Score Section -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3 uppercase tracking-wider">
                IMDB SCORE
              </label>
              <select 
                id="imdbScore" 
                name="imdbScore" 
                class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500"
              >
                <option value="">Any Score</option>
                <option value="9">9.0+</option>
                <option value="8">8.0+</option>
                <option value="7">7.0+</option>
                <option value="6">6.0+</option>
              </select>
            </div>

            <!-- Spin Button -->
            <button 
              id="spinBtn" 
              type="button"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-gray-800 text-lg"
            >
              Spin
            </button>
          </form>
        </div>

        <!-- Result Container -->
        <div 
          id="result" 
          class="bg-gray-800 rounded-lg p-6 hidden"
        >
          <div class="text-center text-gray-400">
            Your random selection will appear here...
          </div>
        </div>
      </div>
    </div>

    <script src="/js/app.js"></script>
  </body>
</html>
